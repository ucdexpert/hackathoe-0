# =============================================================================
# AI Employee Vault - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git (it's in .gitignore)
# =============================================================================

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_ADDRESS=
EMAIL_PASSWORD=

# =============================================================================
# Odoo ERP Configuration (Gold Tier - Odoo MCP Server)
# =============================================================================
# Odoo server URL (e.g., https://mycompany.odoo.com or http://localhost:8069)
ODOO_URL=

# Odoo database name
ODOO_DB=

# Odoo username (email address)
ODOO_USERNAME=

# Odoo password or API key
ODOO_PASSWORD=

# Odoo port (default: 80 for HTTPS, 8069 for local)
ODOO_PORT=80

# =============================================================================
# Twitter API Configuration (Gold Tier - Twitter Post Skill)
# =============================================================================
# Twitter API v2 credentials - Get from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# =============================================================================
# Facebook API Configuration (Gold Tier - Social Meta Skill)
# =============================================================================
# Facebook Graph API credentials - Get from https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# =============================================================================
# Instagram API Configuration (Gold Tier - Social Meta Skill)
# =============================================================================
# Instagram Graph API credentials (requires Facebook Business integration)
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# =============================================================================
# LinkedIn Configuration (Silver Tier)
# =============================================================================
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# =============================================================================
# Paths
# =============================================================================
VAULT_PATH=D:/hackathons-Q-4/hackthon-0/AI_Employee_Vault

# =============================================================================
# Rate Limiting (Optional - defaults shown)
# =============================================================================
# MAX_EMAILS_PER_HOUR=50
# TWITTER_RATE_LIMIT=50
# INSTAGRAM_RATE_LIMIT=25

# =============================================================================
# Browser Configuration (Optional - defaults shown)
# =============================================================================
# BROWSER_TYPE=chromium
# BROWSER_HEADLESS=true
# BROWSER_TIMEOUT=30

# =============================================================================
# MCP Server Configuration (Optional)
# =============================================================================
# MCP_SERVER_PORT=8080
# MCP_TRANSPORT=stdio
